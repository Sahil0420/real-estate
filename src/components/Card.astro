---
import { Image } from "astro:assets";
import Bed from "/public/images/bed.svg";
import Bath from "/public/images/bath-tub.svg";
import CarPark from "/public/images/car-park.svg";
// PropertyCard.astro
interface PropertyProps {
  title: string;
  address: string;
  price: number;
  bedrooms: number;
  bathrooms: number;
  sqft: number;
  image: string;
  type: string;
}

const {
  title = "Commercial Property",
  address = "222 Woodman Pub, London",
  price = 255300,
  bedrooms = 5,
  bathrooms = 3,
  sqft = 1230,
  image = "/images/home-2.png",
  reception = null,
} = Astro.props;
---

<div class="card-wrap">
  <div class="card">
    <Image src={image} alt="image" class="card-img" width={320} height={240} />
    <div class="card-content">
      <p style="font-size: 16px; color:green;">Price: ${price}</p>
      <h6>{title}</h6>
      <address class="address"><u>{address}</u></address>
      <div class="property-details">
        <div class="detail">
          <Image class="icon" src={Bed} width={18} height={18} alt={"Bed"} />
          <span>{bedrooms}</span>
        </div>

        <div class="detail">
          <Image class="icon" src={Bath} width={18} height={18} alt={"Bath"} />
          <span>{bathrooms}</span>
        </div>
        <div class="detail">
          <Image
          class="icon"
          src={CarPark}
          width={18}
          height={18}
          alt={"Reception"}
          />
          <span>{reception}</span>
        </div>
        <div class="detail">
          <i class="sqft-icon"></i>
          <span>{sqft} Sq.Ft</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  img {
    width: 100%;
  }

  address {
    text-overflow: ellipsis;
    font-size: 0.8rem;
  }

  .card-grid:after {
    content: "";
    display: table;
    clear: both;
  }

  .info {
    color: rgb(180, 22, 22);
    font-size: 14px;
  }

  .card {
    display: flex;
    flex-direction: column;
  }
  
  .card-content {
    margin: 1rem 0;
    h4 {
      font-size: 1rem;
      height: 100%;
      text-overflow: ellipsis;
    }
  }

  .property-details {
    display: flex;
    justify-content: space-between;
    margin: 1rem 0;
  }

  .detail {
    display: flex;
    gap: 0.3rem;
    font-size: 12px;
    justify-content: flex-end;
  }

  .icon {
    /* height:12px; */
  }

  .detail p {
    text-overflow: ellipsis;
    overflow: hidden;
  }

  #heading {
    font-size: 24px;
    color: black;
    transition: ease-in-out 0.3s;
    text-overflow: ellipsis;
  }

  #heading:hover {
    color: rgb(237, 226, 71);
  }

  .property-details {
    display: flex;
    justify-content: space-evenly;
  }

  .card-wrap {
    float: left;
    width: 100%;
    padding: 5px;
    min-width: 100%;
  }
  @media (min-width: 500px) {
    .card-wrap {
      width: 50%;
    }
  }

  @media (min-width: 720px) {
    .card-wrap {
      width: 25%;
    }
  }

  .card {
    background-color: white;
    border-radius: 5px;
    border: 1px solid #ccc;
    border-bottom: 2px solid #ccc;
  }
  .card > div {
    padding: 0 1em;
  }
</style>

<script>
  document.querySelector(".view-details")?.addEventListener("click", () => {
    // Add navigation or modal logic
  });
</script>
